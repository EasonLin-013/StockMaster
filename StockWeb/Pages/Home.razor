@page "/"
@using System.Text.Json
@using Microsoft.AspNetCore.Components.WebAssembly.Hosting
@inject HttpClient Http

<PageTitle>@(isSecretMode ? "System Terminal" : "股票即時查詢")</PageTitle>

<div class="container mt-4" style="font-family: @(isSecretMode ? "monospace" : "inherit");">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h5 class="fw-bold @(isSecretMode ? "text-secondary" : "text-primary")">
            @(isSecretMode ? "DATA_STREAM_v2.0" : "StockMaster 查詢系統")
        </h5>
        @* 切換按鈕：低調風格 *@
        <button class="btn btn-sm btn-outline-light text-muted border-0" @onclick="ToggleMode" style="font-size: 10px;">
            [ @(isSecretMode ? "DECRYPT" : "ENCRYPT") ]
        </button>
    </div>

    @* 查詢列 *@
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="input-group input-group-sm shadow-sm">
                <span class="input-group-text bg-white text-muted">@(isSecretMode ? "CMD>" : "代碼>")</span>
                <input @bind="stockInput" @bind:event="oninput" @onkeyup="HandleKeyUp"
                       placeholder="@(isSecretMode ? "sys_id..." : "輸入代碼...")" class="form-control" />
                <button class="btn @(isSecretMode ? "btn-outline-secondary" : "btn-primary")" @onclick="GetStocks" disabled="@loading">
                    @if (loading) { <span class="spinner-border spinner-border-sm"></span> }
                    else { <span>@(isSecretMode ? "EXEC" : "查詢")</span> }
                </button>
            </div>
        </div>
    </div>

    @if (stockList.Any())
    {
        @foreach (var s in stockList)
        {
            <div class="card mb-4 border-0 @(isSecretMode ? "" : "shadow-sm")">
                <div class="card-header @(isSecretMode ? "bg-light text-muted" : "bg-dark text-white") d-flex justify-content-between align-items-center">
                    <span class="fw-bold">@(isSecretMode ? "ID: " : "代碼：")@s.Symbol</span>
                    <span style="font-size: 0.75rem;">@(isSecretMode ? "SYNC: " : "更新：")@s.Time</span>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-sm table-bordered text-center align-middle mb-0" style="font-size: 0.85rem;">
                        <thead class="table-light">
                            <tr class="text-secondary">
                                <th style="width: 15%">@(isSecretMode ? "TAG" : "類別")</th>
                                @for (int i = 1; i <= 5; i++) { <th>@(isSecretMode ? $"L_0{i}" : $"第 {i} 檔")</th> }
                            </tr>
                        </thead>
                        <tbody>
                            @* 賣出列 (Ask) *@
                            <tr style="background-color: @(isSecretMode ? "transparent" : "#f5fff5");">
                                <td class="fw-bold @(isSecretMode ? "text-muted" : "text-success")">@(isSecretMode ? "ASK" : "賣出")</td>
                                @for (int i = 0; i < 5; i++)
                                {
                                    <td>
                                        <div class="fw-bold @(isSecretMode ? "text-dark" : "text-success")">@GetIdx(s.SellPrices, i)</div>
                                        <div class="text-muted" style="font-size: 0.7rem;">@(isSecretMode ? "(U:" : "量:")@GetIdx(s.SellQty, i)@(isSecretMode ? ")" : "")</div>
                                    </td>
                                }
                            </tr>                             
                            @* 買進列 (Bid) *@
                            <tr style="background-color: @(isSecretMode ? "transparent" : "#fff5f5");">
                                <td class="fw-bold @(isSecretMode ? "text-muted" : "text-danger")">@(isSecretMode ? "BID" : "買進")</td>
                                @for (int i = 0; i < 5; i++)
                                {
                                    <td>
                                        <div class="fw-bold @(isSecretMode ? "text-dark" : "text-danger")">@GetIdx(s.BuyPrices, i)</div>
                                        <div class="text-muted" style="font-size: 0.7rem;">@(isSecretMode ? "(U:" : "量:")@GetIdx(s.BuyQty, i)@(isSecretMode ? ")" : "")</div>
                                    </td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer bg-white border-top-0">
                    <div class="row text-center fw-bold" style="font-size: 0.85rem;">
                        <div class="col border-end">@(isSecretMode ? "CURR_V: " : "成交: ") <span class="@(isSecretMode ? "text-dark" : "text-primary")">@s.CurrentPrice</span></div>
                        <div class="col border-end text-muted">@(isSecretMode ? "PREV_C: " : "昨收: ")@s.YesterdayClose</div>
                        <div class="col border-end @(isSecretMode ? "text-muted" : "text-danger")">@(isSecretMode ? "MAX_V: " : "最高: ")@s.High</div>
                        <div class="col @(isSecretMode ? "text-muted" : "text-success")">@(isSecretMode ? "MIN_V: " : "最低: ")@s.Low</div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private string stockInput = "";
    private bool loading = false;
    private bool isSecretMode = true; // 預設為低調版 (Secret Mode)
    private List<StockDisplay> stockList = new();

    private string apiBaseUrl = "https://stockmaster-te7f.onrender.com/api/stock/";

    private void ToggleMode() => isSecretMode = !isSecretMode;

    private async Task GetStocks()
    {
        if (string.IsNullOrWhiteSpace(stockInput)) return;
        loading = true;
        stockList.Clear();
        var codes = stockInput.Replace(" ", "").TrimEnd(',');

        try
        {
            var response = await Http.GetFromJsonAsync<JsonElement>($"{apiBaseUrl}{codes}");
            if (response.TryGetProperty("msgArray", out var msgArray))
            {
                foreach (var item in msgArray.EnumerateArray())
                {
                    stockList.Add(new StockDisplay
                    {
                        Symbol = item.GetProperty("c").GetString(),
                        CurrentPrice = item.GetProperty("z").GetString() ?? "---",
                        High = item.GetProperty("h").GetString(),
                        Low = item.GetProperty("l").GetString(),
                        YesterdayClose = item.GetProperty("y").GetString(),
                        Time = item.GetProperty("t").GetString(),
                        BuyPrices = item.GetProperty("b").GetString()?.Split('_'),
                        BuyQty = item.GetProperty("g").GetString()?.Split('_'),
                        SellPrices = item.GetProperty("a").GetString()?.Split('_'),
                        SellQty = item.GetProperty("f").GetString()?.Split('_')
                    });
                }
            }
        }
        catch (Exception ex) { Console.WriteLine($"Error: {ex.Message}"); }
        finally { loading = false; }
    }

    private string GetIdx(string[]? arr, int i) => (arr != null && arr.Length > i && !string.IsNullOrEmpty(arr[i])) ? arr[i] : "-";
    private void HandleKeyUp(KeyboardEventArgs e) { if (e.Key == "Enter") GetStocks(); }

    public class StockDisplay
    {
        public string? Symbol { get; set; }
        public string? CurrentPrice { get; set; }
        public string? High { get; set; }
        public string? Low { get; set; }
        public string? YesterdayClose { get; set; }
        public string? Time { get; set; }
        public string[]? BuyPrices { get; set; }
        public string[]? BuyQty { get; set; }
        public string[]? SellPrices { get; set; }
        public string[]? SellQty { get; set; }
    }
}
