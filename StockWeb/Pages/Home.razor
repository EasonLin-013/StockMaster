@page "/"
@using System.Text.Json
@inject HttpClient Http

<PageTitle>即時查詢系統</PageTitle>

<div class="container mt-4">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">StockMaster</h2>
    </div>

    @* 查詢列 *@
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <div class="input-group shadow-sm">
                <input @bind="stockInput" @bind:event="oninput" @onkeyup="HandleKeyUp"
                       placeholder="輸入代碼，多筆請用逗號隔開 (如: 2330, 2317)" class="form-control" />
                <button class="btn btn-primary" @onclick="GetStocks" disabled="@loading">
                    @if (loading) { <span class="spinner-border spinner-border-sm"></span> }
                    else { <span>查詢</span> }
                </button>
            </div>
        </div>
    </div>

    @* 股票卡片清單 *@
    @if (stockList.Any())
    {
        @foreach (var s in stockList)
        {
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">代碼：@s.Symbol</h5>
                    <span class="badge bg-secondary">最後更新：@s.Time</span>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered mb-0 text-center align-middle">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 10%">類別</th>
                                @for (int i = 1; i <= 5; i++) { <th>第 @i 檔</th> }
                            </tr>
                        </thead>
                        <tbody>
                            @* 賣出列 (Ask) *@
                            <tr class="table-success" style="--bs-table-bg: #f5fff5;">
                                <td class="fw-bold text-success">賣出</td>
                                @for (int i = 0; i < 5; i++)
                                {
                                    <td>
                                        <div class="fw-bold text-success">@GetIdx(s.SellPrices, i)</div>
                                        <div class="small text-muted">量: @GetIdx(s.SellQty, i)</div>
                                    </td>
                                }
                            </tr>                            
                            @* 買進列 (Bid) *@
                            <tr class="table-danger" style="--bs-table-bg: #fff5f5;">
                                <td class="fw-bold text-danger">買進</td>
                                @for (int i = 0; i < 5; i++)
                                {
                                    <td>
                                        <div class="fw-bold text-danger">@GetIdx(s.BuyPrices, i)</div>
                                        <div class="small text-muted">量: @GetIdx(s.BuyQty, i)</div>
                                    </td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer bg-white border-top-0">
                    <div class="row text-center fw-bold">
                        <div class="col border-end">成交價: <span class="text-primary fs-5">@s.CurrentPrice</span></div>
                        <div class="col border-end text-muted">昨收: @s.YesterdayClose</div>
                        <div class="col border-end text-danger">最高: @s.High</div>
                        <div class="col text-success">最低: @s.Low</div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private string stockInput = "";
    private bool loading = false;
    private List<StockDisplay> stockList = new();

    // Render 網址
    private string apiBaseUrl = "https://stockmaster-te7f.onrender.com/api/stock/";

    private async Task GetStocks()
    {
        if (string.IsNullOrWhiteSpace(stockInput)) return;
        loading = true;
        stockList.Clear();

        var codes = stockInput.Replace(" ", "").TrimEnd(',');

        try
        {
            var response = await Http.GetFromJsonAsync<JsonElement>($"{apiBaseUrl}{codes}");
            if (response.TryGetProperty("msgArray", out var msgArray))
            {
                foreach (var item in msgArray.EnumerateArray())
                {
                    stockList.Add(new StockDisplay
                    {
                        Symbol = item.GetProperty("c").GetString(),
                        CurrentPrice = item.GetProperty("z").GetString() ?? "市價中",
                        High = item.GetProperty("h").GetString(),
                        Low = item.GetProperty("l").GetString(),
                        YesterdayClose = item.GetProperty("y").GetString(),
                        Time = item.GetProperty("t").GetString(),
                        // 證交所 API 的五檔是以 "_" 分隔的字串
                        BuyPrices = item.GetProperty("b").GetString()?.Split('_'),
                        BuyQty = item.GetProperty("g").GetString()?.Split('_'),
                        SellPrices = item.GetProperty("a").GetString()?.Split('_'),
                        SellQty = item.GetProperty("f").GetString()?.Split('_')
                    });
                }
            }
        }
        catch (Exception ex) { Console.WriteLine($"Error: {ex.Message}"); }
        finally { loading = false; }
    }

    private string GetIdx(string[]? arr, int i) => (arr != null && arr.Length > i && !string.IsNullOrEmpty(arr[i])) ? arr[i] : "-";
    private void HandleKeyUp(KeyboardEventArgs e) { if (e.Key == "Enter") GetStocks(); }

    public class StockDisplay
    {
        public string? Symbol { get; set; }
        public string? CurrentPrice { get; set; }
        public string? High { get; set; }
        public string? Low { get; set; }
        public string? YesterdayClose { get; set; }
        public string? Time { get; set; }
        public string[]? BuyPrices { get; set; }
        public string[]? BuyQty { get; set; }
        public string[]? SellPrices { get; set; }
        public string[]? SellQty { get; set; }
    }
}
