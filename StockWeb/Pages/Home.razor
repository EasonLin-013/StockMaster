@page "/"
@using System.Text.Json
@inject HttpClient Http

<PageTitle>System Data Terminal</PageTitle>

<div class="terminal-container">
    <div class="input-group">
        <span class="prompt">></span>
        <input @bind="stockCode" 
               @onkeyup="HandleKeyUp" 
               placeholder="Query ID..." 
               class="minimal-input" />
        <button @onclick="QueryStock" class="minimal-btn">RUN_QUERY</button>
        
        @if (isLoading)
        {
            <span class="status-tag">FETCHING_REMOTE_DATA...</span>
        }
    </div>

    @if (stockData != null)
    {
        <div class="results-area">
            <div class="meta-panel">
                <div class="meta-item">ENTRY_ID: @stockCode</div>
                <div class="meta-item">INIT_S: @stockData.Open</div>
                <div class="meta-item">MAX_V: @stockData.High</div>
                <div class="meta-item">MIN_V: @stockData.Low</div>
                <div class="meta-item highlight">CURR_V: @stockData.Close</div>
                <div class="meta-item">VOL_U: @stockData.Volume</div>
            </div>
            
            <div class="table-label">ORDER_BOOK_ANALYSIS</div>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>RANK</th>
                        <th>B_VAL (QTY)</th>
                        <th>A_VAL (QTY)</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 5; i++)
                    {
                        <tr>
                            <td class="index-col">#0@(i + 1)</td>
                            <td>@FormatPrice(stockData.BidPrices, i) (@FormatVolume(stockData.BidVolumes, i))</td>
                            <td>@FormatPrice(stockData.AskPrices, i) (@FormatVolume(stockData.AskVolumes, i))</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="timestamp">SYNC_TIME: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</div>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="error-log">ERR_SIG: @errorMessage</div>
    }
</div>

<style>
    :global(body) {
        background-color: #ffffff !important;
        color: #444444 !important;
        font-family: 'Consolas', 'Monaco', 'Courier New', monospace !important;
        margin: 0;
        padding: 0;
    }

    .terminal-container {
        padding: 12px;
        font-size: 12px;
    }

    .input-group {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 20px;
    }

    .prompt { color: #aaa; font-weight: bold; }

    .minimal-input {
        border: 1px solid #e0e0e0;
        padding: 3px 6px;
        outline: none;
        width: 90px;
        background: #fdfdfd;
        font-family: inherit;
    }

    .minimal-btn {
        background: #f5f5f5;
        border: 1px solid #ddd;
        padding: 3px 12px;
        cursor: pointer;
        font-size: 11px;
        color: #666;
        font-family: inherit;
    }

    .status-tag { color: #bbb; font-style: italic; margin-left: 10px; }

    /* 基礎數據面板 */
    .meta-panel {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
        background: #fafafa;
        padding: 10px;
        border: 1px solid #eee;
        margin-bottom: 15px;
        max-width: 500px;
    }

    .meta-item { color: #666; font-size: 11px; }
    .highlight { color: #333; font-weight: bold; }

    .table-label {
        font-size: 11px;
        color: #999;
        margin-bottom: 5px;
        letter-spacing: 1px;
    }

    .data-table {
        border-collapse: collapse;
        width: 100%;
        max-width: 500px;
        border: 1px solid #eee;
    }

    .data-table th {
        background: #f0f0f0;
        text-align: left;
        color: #777;
        font-weight: normal;
        padding: 6px;
        border-bottom: 1px solid #eee;
    }

    .data-table td {
        padding: 6px;
        border-bottom: 1px solid #f9f9f9;
        color: #555;
    }

    .index-col { color: #ccc; width: 50px; }

    .timestamp {
        margin-top: 10px;
        font-size: 10px;
        color: #bbb;
    }

    .error-log { color: #cc0000; margin-top: 10px; font-size: 11px; }
</style>

@code {
    private string stockCode = "";
    private StockData? stockData;
    private bool isLoading = false;
    private string errorMessage = "";
    
    // 請確保此處為你的 Render API 網址
    private string apiBaseUrl = "https://stockmasterapi.onrender.com/api/stock/";

    private async Task QueryStock()
    {
        if (string.IsNullOrWhiteSpace(stockCode)) return;

        isLoading = true;
        errorMessage = "";
        try
        {
            stockData = await Http.GetFromJsonAsync<StockData>($"{apiBaseUrl}{stockCode}");
        }
        catch (Exception)
        {
            errorMessage = "REMOTE_SRV_TIMEOUT";
            stockData = null;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void HandleKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter") QueryStock();
    }

    private string FormatPrice(List<decimal>? list, int index) 
        => (list != null && list.Count > index) ? list[index].ToString("F2") : "0.00";

    private string FormatVolume(List<int>? list, int index) 
        => (list != null && list.Count > index) ? list[index].ToString() : "0";

    public class StockData
    {
        // 基礎數據
        public decimal Open { get; set; }
        public decimal High { get; set; }
        public decimal Low { get; set; }
        public decimal Close { get; set; }
        public long Volume { get; set; }

        // 五檔數據
        public List<decimal> BidPrices { get; set; } = new();
        public List<int> BidVolumes { get; set; } = new();
        public List<decimal> AskPrices { get; set; } = new();
        public List<int> AskVolumes { get; set; } = new();
    }
}