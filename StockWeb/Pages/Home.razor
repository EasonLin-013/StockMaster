@page "/"
@using System.Text.Json
@inject HttpClient Http

<PageTitle>@(isSecretMode ? "System Terminal" : "股票即時查詢")</PageTitle>

<div class="container-fluid custom-container" style="font-family: @(isSecretMode ? "monospace" : "inherit"); margin: 0 auto;">
    
    @* 頂部標題與模式切換 *@
    <div class="d-flex justify-content-between align-items-center mb-3 mt-3">
        <h6 class="fw-bold mb-0 @(isSecretMode ? "text-secondary" : "text-primary")">
            @(isSecretMode ? "DATA_STREAM_v2.0" : "StockMaster")
        </h6>
        <button class="btn btn-sm btn-light text-muted border-0" @onclick="ToggleMode" style="font-size: 11px; padding: 2px 8px;">
            @(isSecretMode ? "[ DECRYPT ]" : "[ ENCRYPT ]")
        </button>
    </div>

    @* 查詢區域 *@
    <div class="row mb-3 g-2">
        <div class="col-12">
            <div class="input-group shadow-sm">
                <input @bind="stockInput" @bind:event="oninput" @onkeyup="HandleKeyUp"
                       type="text" 
                       placeholder="@(isSecretMode ? "sys_id..." : "輸入代碼...")" 
                       class="form-control" style="font-size: 16px;" />
                <button class="btn @(isSecretMode ? "btn-outline-secondary" : "btn-primary") px-3" @onclick="GetStocks" disabled="@loading">
                    @if (loading) { <span class="spinner-border spinner-border-sm"></span> }
                    else { <span>@(isSecretMode ? "EXEC" : "查詢")</span> }
                </button>
            </div>
        </div>
    </div>

    @if (stockList.Any())
    {
        @foreach (var s in stockList)
        {
            <div class="card border-0 mb-3 @(isSecretMode ? "border-start" : "shadow-sm")">
                <div class="card-header @(isSecretMode ? "bg-light text-muted" : "bg-dark text-white") py-2 d-flex justify-content-between align-items-center px-2">
                    <span class="fw-bold" style="font-size: 0.85rem;">@(isSecretMode ? "ID: " : "代碼: ")@s.Symbol</span>
                    <span style="font-size: 0.65rem; opacity: 0.8;">@s.Time</span>
                </div>
                
                @* 關鍵：移除 min-width，強制表格自適應 *@
                <div class="table-responsive" style="overflow-x: hidden;"> @* 隱藏捲軸，強制內容塞入 *@
                    <table class="table table-sm table-bordered text-center align-middle mb-0 custom-table">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 12%">T</th>
                                @for (int i = 1; i <= 5; i++) { <th>L@(i)</th> }
                            </tr>
                        </thead>
                        <tbody>
                            <tr style="background-color: @(isSecretMode ? "transparent" : "#f5fff5");">
                                <td class="fw-bold @(isSecretMode ? "text-muted" : "text-success")">A</td>
                                @for (int i = 0; i < 5; i++) {
                                    <td>
                                        <div class="price-text">@GetIdx(s.SellPrices, i)</div>
                                        <div class="qty-text">@GetIdx(s.SellQty, i)</div>
                                    </td>
                                }
                            </tr>                             
                            <tr style="background-color: @(isSecretMode ? "transparent" : "#fff5f5");">
                                <td class="fw-bold @(isSecretMode ? "text-muted" : "text-danger")">B</td>
                                @for (int i = 0; i < 5; i++) {
                                    <td>
                                        <div class="price-text">@GetIdx(s.BuyPrices, i)</div>
                                        <div class="qty-text">@GetIdx(s.BuyQty, i)</div>
                                    </td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="card-footer bg-white border-top-0 py-2 px-1">
                    <div class="row g-0 text-center footer-stats">
                        <div class="col-3 border-end">
                            <div class="f-label">@(isSecretMode ? "CUR" : "現")</div>
                            <div class="f-val fw-bold @(isSecretMode ? "" : "text-primary")">@s.CurrentPrice</div>
                        </div>
                        <div class="col-3 border-end">
                            <div class="f-label">@(isSecretMode ? "PRE" : "昨")</div>
                            <div class="f-val">@s.YesterdayClose</div>
                        </div>
                        <div class="col-3 border-end">
                            <div class="f-label">@(isSecretMode ? "MAX" : "高")</div>
                            <div class="f-val @(isSecretMode ? "" : "text-danger")">@s.High</div>
                        </div>
                        <div class="col-3">
                            <div class="f-label">@(isSecretMode ? "MIN" : "低")</div>
                            <div class="f-val @(isSecretMode ? "" : "text-success")">@s.Low</div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

<style>
    /* 強制寬度佈局 */
    .custom-container {
        width: 98% !important;
        padding-left: 1% !important;
        padding-right: 1% !important;
        max-width: 100% !important;
    }

    /* 表格內部擠壓優化 */
    .custom-table {
        table-layout: fixed; /* 強制固定比例，防止欄位被撐開 */
        width: 100%;
        font-size: 0.75rem; /* 稍微縮小字體 */
    }

    .custom-table th, .custom-table td {
        padding: 4px 0px !important; /* 移除水平 Padding */
        overflow: hidden;
        white-space: nowrap;
    }

    .price-text {
        font-weight: bold;
        letter-spacing: -0.5px; /* 緊縮字距 */
    }

    .qty-text {
        font-size: 0.6rem;
        color: #999;
    }

    /* 頁尾數據優化 */
    .footer-stats .f-label { font-size: 0.6rem; color: #aaa; margin-bottom: -2px; }
    .footer-stats .f-val { font-size: 0.8rem; }

    @@media (min-width: 1200px) {
        .custom-container { max-width: 1000px !important; }
        .custom-table { font-size: 0.85rem; }
    }
</style>

@code {
    private string stockInput = "";
    private bool loading = false;
    private bool isSecretMode = true; 
    private List<StockDisplay> stockList = new();
    private string apiBaseUrl = "https://stockmaster-te7f.onrender.com/api/stock/";

    private void ToggleMode() => isSecretMode = !isSecretMode;

    private async Task GetStocks()
    {
        if (string.IsNullOrWhiteSpace(stockInput)) return;
        loading = true;
        stockList.Clear();
        var codes = stockInput.Replace(" ", "").TrimEnd(',');

        try
        {
            var response = await Http.GetFromJsonAsync<JsonElement>($"{apiBaseUrl}{codes}");
            if (response.TryGetProperty("msgArray", out var msgArray))
            {
                foreach (var item in msgArray.EnumerateArray())
                {
                    stockList.Add(new StockDisplay {
                        Symbol = item.GetProperty("c").GetString(),
                        CurrentPrice = item.GetProperty("z").GetString() ?? "---",
                        High = item.GetProperty("h").GetString(),
                        Low = item.GetProperty("l").GetString(),
                        YesterdayClose = item.GetProperty("y").GetString(),
                        Time = item.GetProperty("t").GetString(),
                        BuyPrices = item.GetProperty("b").GetString()?.Split('_'),
                        BuyQty = item.GetProperty("g").GetString()?.Split('_'),
                        SellPrices = item.GetProperty("a").GetString()?.Split('_'),
                        SellQty = item.GetProperty("f").GetString()?.Split('_')
                    });
                }
            }
        }
        catch (Exception ex) { Console.WriteLine($"Error: {ex.Message}"); }
        finally { loading = false; }
    }

    private string GetIdx(string[]? arr, int i) => (arr != null && arr.Length > i && !string.IsNullOrEmpty(arr[i])) ? arr[i] : "-";
    private void HandleKeyUp(KeyboardEventArgs e) { if (e.Key == "Enter") GetStocks(); }

    public class StockDisplay {
        public string? Symbol { get; set; }
        public string? CurrentPrice { get; set; }
        public string? High { get; set; }
        public string? Low { get; set; }
        public string? YesterdayClose { get; set; }
        public string? Time { get; set; }
        public string[]? BuyPrices { get; set; }
        public string[]? BuyQty { get; set; }
        public string[]? SellPrices { get; set; }
        public string[]? SellQty { get; set; }
    }
}