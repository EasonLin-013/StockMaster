@page "/"
@using System.Text.Json
@inject HttpClient Http

<PageTitle>System Terminal</PageTitle>

<div class="container mt-4" style="font-family: 'Consolas', 'Monaco', monospace; color: #444;">
    <div class="mb-4 text-start">
        <h5 class="fw-bold text-secondary">DATA_STREAM_v2.0</h5>
    </div>

    @* 查詢列：偽裝成指令輸入 *@
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="input-group input-group-sm">
                <span class="input-group-text bg-white border-end-0 text-muted">CMD></span>
                <input @bind="stockInput" @bind:event="oninput" @onkeyup="HandleKeyUp"
                       placeholder="sys_id..." class="form-control border-start-0" />
                <button class="btn btn-outline-secondary" @onclick="GetStocks" disabled="@loading">
                    @if (loading) { <span class="spinner-border spinner-border-sm"></span> }
                    else { <span>EXECUTE</span> }
                </button>
            </div>
        </div>
    </div>

    @* 數據清單 *@
    @if (stockList.Any())
    {
        @foreach (var s in stockList)
        {
            <div class="mb-5" style="border-left: 3px solid #eee; padding-left: 15px;">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="fw-bold text-dark">[ID: @s.Symbol]</span>
                    <span class="text-muted" style="font-size: 0.75rem;">TIMESTAMP: @s.Time</span>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-sm table-bordered text-center align-middle" style="font-size: 0.85rem; border-color: #f0f0f0;">
                        <thead>
                            <tr class="text-secondary" style="background-color: #fafafa;">
                                <th style="width: 10%">TAG</th>
                                @for (int i = 1; i <= 5; i++) { <th>L_0@i</th> }
                            </tr>
                        </thead>
                        <tbody>
                            @* 賣出列 (UI標籤 ASK) *@
                            <tr>
                                <td class="text-muted">ASK</td>
                                @for (int i = 0; i < 5; i++)
                                {
                                    <td>
                                        <div class="text-dark">@GetIdx(s.SellPrices, i)</div>
                                        <div class="text-muted" style="font-size: 0.7rem;">(U:@GetIdx(s.SellQty, i))</div>
                                    </td>
                                }
                            </tr>                             
                            @* 買進列 (UI標籤 BID) *@
                            <tr>
                                <td class="text-muted">BID</td>
                                @for (int i = 0; i < 5; i++)
                                {
                                    <td>
                                        <div class="text-dark">@GetIdx(s.BuyPrices, i)</div>
                                        <div class="text-muted" style="font-size: 0.7rem;">(U:@GetIdx(s.BuyQty, i))</div>
                                    </td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>

                @* 底部數據 (UI標籤偽裝) *@
                <div class="py-2" style="font-size: 0.8rem; border-bottom: 1px solid #f8f8f8;">
                    <div class="row g-0 text-muted">
                        <div class="col-auto me-4">CURR_V: <span class="text-dark">@s.CurrentPrice</span></div>
                        <div class="col-auto me-4">PREV_C: @s.YesterdayClose</div>
                        <div class="col-auto me-4">MAX_V: @s.High</div>
                        <div class="col-auto">MIN_V: @s.Low</div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private string stockInput = "";
    private bool loading = false;
    private List<StockDisplay> stockList = new();

    // 沿用你原本能跑的網址
    private string apiBaseUrl = "https://stockmaster-te7f.onrender.com/api/stock/";

    private async Task GetStocks()
    {
        if (string.IsNullOrWhiteSpace(stockInput)) return;
        loading = true;
        stockList.Clear();

        var codes = stockInput.Replace(" ", "").TrimEnd(',');

        try
        {
            // 維持 JsonElement 解析邏輯
            var response = await Http.GetFromJsonAsync<JsonElement>($"{apiBaseUrl}{codes}");
            if (response.TryGetProperty("msgArray", out var msgArray))
            {
                foreach (var item in msgArray.EnumerateArray())
                {
                    stockList.Add(new StockDisplay
                    {
                        Symbol = item.GetProperty("c").GetString(),
                        CurrentPrice = item.GetProperty("z").GetString() ?? "---",
                        High = item.GetProperty("h").GetString(),
                        Low = item.GetProperty("l").GetString(),
                        YesterdayClose = item.GetProperty("y").GetString(),
                        Time = item.GetProperty("t").GetString(),
                        BuyPrices = item.GetProperty("b").GetString()?.Split('_'),
                        BuyQty = item.GetProperty("g").GetString()?.Split('_'),
                        SellPrices = item.GetProperty("a").GetString()?.Split('_'),
                        SellQty = item.GetProperty("f").GetString()?.Split('_')
                    });
                }
            }
        }
        catch (Exception ex) { Console.WriteLine($"Error: {ex.Message}"); }
        finally { loading = false; }
    }

    private string GetIdx(string[]? arr, int i) => (arr != null && arr.Length > i && !string.IsNullOrEmpty(arr[i])) ? arr[i] : "-";
    private void HandleKeyUp(KeyboardEventArgs e) { if (e.Key == "Enter") GetStocks(); }

    public class StockDisplay
    {
        public string? Symbol { get; set; }
        public string? CurrentPrice { get; set; }
        public string? High { get; set; }
        public string? Low { get; set; }
        public string? YesterdayClose { get; set; }
        public string? Time { get; set; }
        public string[]? BuyPrices { get; set; }
        public string[]? BuyQty { get; set; }
        public string[]? SellPrices { get; set; }
        public string[]? SellQty { get; set; }
    }
}
